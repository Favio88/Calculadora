<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context=".LinearLayoutActivity">

    <LinearLayout
        android:id="@+id/layout_pantalla"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".3"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center"
            android:paddingRight="10dp"
            android:text="0"
            android:textSize="50dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_teclas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1.7"
        android:weightSum="4"
        android:layout_marginLeft="7dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="ON"
                android:textSize="25sp"
                android:background="#088A68"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="1dp"
                android:onClick="encender"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="OFF"
                android:textSize="25sp"
                android:background="#C0BEA8"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="2dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="7"
                android:textSize="25sp"
                android:background="#C0BEA8"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="2dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="4"
                android:textSize="25sp"
                android:background="#C0BEA8"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="2dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="1"
                android:textSize="25sp"
                android:background="#C0BEA8"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="2dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="0"
                android:textSize="25sp"
                android:background="#C0BEA8"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="2dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="MRC"
                android:textSize="25sp"
                android:background="#D0C13C"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="2dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="âˆš"
                android:textSize="25sp"
                android:background="#C0BEA8"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="2dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="8"
                android:textSize="25sp"
                android:background="#C0BEA8"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="2dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="5"
                android:textSize="25sp"
                android:background="#C0BEA8"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="2dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="2"
                android:textSize="25sp"
                android:background="#C0BEA8"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="2dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="."
                android:textSize="25sp"
                android:background="#C0BEA8"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="2dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="M-"
                android:textSize="25sp"
                android:background="#D0C13C"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="2dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="%"
                android:textSize="25sp"
                android:background="#C0BEA8"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="2dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="9"
                android:textSize="25sp"
                android:background="#C0BEA8"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="2dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="6"
                android:textSize="25sp"
                android:background="#C0BEA8"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="2dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="3"
                android:textSize="25sp"
                android:background="#C0BEA8"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="2dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="="
                android:textSize="25sp"
                android:background="#C0BEA8"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="2dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="M+"
                android:textSize="25sp"
                android:background="#D0C13C"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="2dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="/"
                android:textSize="25sp"
                android:background="#C0BEA8"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="2dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="X"
                android:textSize="25sp"
                android:background="#C0BEA8"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="2dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="-"
                android:textSize="25sp"
                android:background="#C0BEA8"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="2dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:text="+"
                android:textSize="25sp"
                android:background="#088A68"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="2dp"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>